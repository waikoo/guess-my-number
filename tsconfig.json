{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true
    // "noUnusedLocals": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
